{
  "name": "djvu.js_website",
  "scripts": {
    "start": "npx @11ty/eleventy --serve --port 9000",
    "css": "sass --no-source-map --watch _src/css/main.scss _src/css/main.css",
    "build:css": "sass --no-source-map _src/css/main.scss _src/css/main.css",
    "build": "npm run build:css && npx @11ty/eleventy",
    "startOld": "harp ./_src --port 9000",
    "compile": "harp compile _src ./compile && npm run copy",
    "copy": "node .js",
    "static": "npx serve docs -l 9000"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "jstransformer-markdown-it": "^2.1.0",
    "sass": "^1.39.0",
    "fs-extra": "^10.0.0"
  }
}
