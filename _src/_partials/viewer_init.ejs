<script src="<%= library_link %>"></script>
<script src="<%= viewer_js_link %>"></script>
<script>
    window.onload = function() { 
        var ViewerInstance = new DjVu.Viewer();
        ViewerInstance.render(document.querySelector("#for_viewer"));

        document.querySelectorAll('a.djvu_example').forEach(link => {
            link.onclick = e => {
                e.preventDefault();
                ViewerInstance.loadDocumentByUrl(link.href);
            };
        })
    }
</script>